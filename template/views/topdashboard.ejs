<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel Dashboard</title>
    <!-- <link rel="stylesheet" href=""> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        /* Add your CSS styles for the dashboard layout here */

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .alert-success{
            margin-left: 250px;
            padding-left: 30px;
        }
        .content {
            margin-left: 272px;
            padding: 20px;
        }

        .content #more_product {
            border: 2px solid black;
            background-color: black;
            text-decoration: none;
            color: white;
            text-align: left;
            margin: 10px 10px;
            padding: 4px 5px;
            position: fixed;
            right: 22px;
            bottom: 20px;
        }

        .menu-item {
            margin-bottom: 10px;
        }

        .menu-item a {
            color: #fff;
            text-decoration: none;
            display: block;
        }

        .menu-item a:hover {
            background-color: #555;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
        }

        .card img {
            width: 184px;
        }

        .card {
            border: 2px solid black;
            padding: 9px 4px;
            text-align: center;
            margin-left: 4px;
            margin-top: 4px;
        }


        .card a,
        button {
            text-decoration: none;
            border: 2px solid green;
            padding: 2px 17px;
            background: #208120;
            color: white;
            cursor: pointer;
            margin-top: 5px;
        }

        .card h4,
        p {
            margin: 4px 4px;
            font-size: 18px;
        }

        /* Basic styling for the sidebar */
        .sidebar {
            width: 250px;
            background-color: #333;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            padding-top: 20px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar li {
            margin: 0;
        }

        .sidebar a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 10px 20px;
        }

        /* Style the dropdown menu */
        .dropdown-menu {
            display: none;
            background-color: #444;
            padding: 0;
        }

        .dropdown-menu li {
            padding: 10px 0;
        }

        /* Highlight active menu item */
        .sidebar a.active {
            background-color: #555;
        }

        /* Hover effect for links */
        .sidebar a:hover {
            background-color: #555;
        }

        /* Style the active dropdown menu */
        .dropdown.active .dropdown-menu {
            display: block;
        }


        /* Styles for product list, edit, and add forms go here */
    </style>
</head>

<body>
    <% if (success && success != "") { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
          </div>
    <% }else if(err && err != ""){ %>
        <div class="alert alert-danger" role="alert">
            <%= err %>
        </div>
    <% } %>
    <div class="sidebar">
        <h2>Admin Panel</h2>
        <div class="sidebar">
            <ul>
                <li><a href="/dashboard">Dashboard</a></li>
                <li class="dropdown">
                    <a href="">Product</a>
                    <ul class="dropdown-menu">
                        <li><a href="/topdashboard">Top</a></li>
                        <li><a href="/body">Body</a></li>
                        <li><a href="/Short-Dress">Short-Dress</a></li>
                        <li><a href="/Long-Dress">Long-Dress</a></li>
                        <li><a href="/Jump-Suit">Jump-Suit</a></li>
                        <li><a href="/Chord-Set">Chord-Set</a></li>
                        <li><a href="/Short-Skirt">Short-Skirt</a></li>
                        <li><a href="/Long-Skirt">Long-Skirt</a></li>
                        <li><a href="/Paint-Palazzo">Paint-Palazzo</a></li>
                    </ul>
                </li>
                <li><a href="#">Banner</a></li>
                <!-- Add more menu items as needed -->
            </ul>
        </div>
        <!-- Add more menu items for other sections as needed -->
    </div>
    <div class="content">
        <h1>Dashboard</h1>
        <h3>Tops</h3>
        <div class="container">
            <% x.forEach(y=> { %>
                <div class="card">
                    <img src="../img/photos/<%=y.product_img[0].filename %>" alt="" srcset="">
                    <h4>
                        <%= y.product_name %>
                    </h4>
                    <p>
                        <%= y.product_discription %>
                    </p>
                    <h4>
                        USD<%= y.product_price %>
                    </h4>
                    <a href="">Edit</a>
                    <form action="" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </div>
                <% }) %>
        </div>
        <a href="/admin/addproduct9955" id="more_product">Add More Product</a>
        <!-- Dashboard content goes here -->
    </div>

    <script src="../../src/router.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const dropdowns = document.querySelectorAll('.dropdown');

            dropdowns.forEach((dropdown) => {
                dropdown.addEventListener('click', () => {
                    dropdown.classList.toggle('active');
                });
            });
        });

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>

</html>