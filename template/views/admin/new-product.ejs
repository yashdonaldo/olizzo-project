<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Editing Page</title>
    <style>
        /* CSS styling for the page */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            margin-top: 6px;
        }

        input[type="text"],
        input[type="number"],
        select, textarea {
            width: 100%;
            padding: 10px;
            margin-top: 9px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <% 
        if (typeof message !== "undefined") {
            %>
             <p style="color: red;"><%= message %> </p>
            <%
        }    
    %>
    <form action="" method="post" class="container"  enctype="multipart/form-data">
        <h1>Add Product</h1>
        <div class="form-group">
            <label for="productName">Product Image <span style="color: red;">*</span></label>
            <input type="file" id="productName" name="pimage" multiple required>
        </div>
        <div class="form-group">
            <label for="productPrice">Product Name <span style="color: red;">*</span></label>
            <input type="text" id="productPrice" name="pname">
        </div>
        <div class="form-group">
            <label for="productPrice">Product Price <span style="color: red;">*</span></label>
            <input type="number" id="productPrice" name="price">
        </div>
        <div class="form-group">
            <label for="productPrice">Product Model <span style="color: red;">*</span></label>
            <input type="text" id="productPrice" name="model">
        </div>
        <div class="form-group">
        <label for="selectInput">Product catagories <span style="color: red;">*</span></label>
        <select id="selectInput" name="select">
            <option value="Select an Option">Select an Option</option>
            <option value="Top">Top</option>
            <option value="Body">Body</option>
            <option value="Short-Dress">Short-Dress</option>
            <option value="Long-Dress">Long-Dress</option>
            <option value="Jump-Suit">Jump-Suit</option>
            <option value="Cord-Set">Cord-Set</option>
            <option value="Short-Skirt">Short-Skirt</option>
            <option value="Long-Skirt">Long-Skirt</option>
            <option value="Paint-Palazzo">Paint-Palazzo</option>
        </select>
        </div>
        <div class="form-group">
            <label for="productName">Product discription <span style="color: red;">*</span></label>
            <textarea id="message" name="discription" rows="4" required></textarea>
        </div>
        <div class="form-group">
            <button id="saveButton" type="submit">Save</button>
        </div>
    </form>

</body>

</html>